# Defining Default widget properties
<MyLayout>


    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height # make it fit whole window widget

        TextInput:
            id: calc_input
            text: "0"
            halign: "right" #align to the right hand side
            font_size: 65
            size_hint: (1, .15) # Dynamic sizing with fit whole width 


        GridLayout:
            cols: 4
            rows: 5

            # row 1
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "%"
                on_press: root.math_sign('%')

            Button:
                id: clear_all
                size_hint: (.2,.2)
                font_size: 32
                text: "C"
                on_press: root.clear_all()

            Button:
                id: clear
                size_hint: (.2,.2)
                font_size: 32
                text: u"\u00AB"
                on_press: root.backspace()

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "/"
                on_press: root.math_sign('/')

            # row 2
            Button:
                background_color: (157/255,157/255,157/255,1)
                size_hint: (.2,.2)
                font_size: 32
                text: "7"
                on_press: root.button_press(7)

            Button:
                size_hint: (.2,.2)
                background_color: (157/255,157/255,157/255,1)
                font_size: 32
                text: "8"
                on_press: root.button_press(8)

            Button:
                size_hint: (.2,.2)
                background_color: (157/255,157/255,157/255,1)
                font_size: 32
                text: "9"
                on_press: root.button_press(9)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "x"
                on_press: root.math_sign('*')

            # row 3
            Button:
                size_hint: (.2,.2)
                background_color: (157/255,157/255,157/255,1)
                font_size: 32
                text: "4"
                on_press: root.button_press(4)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "5"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(5)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "6"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(6)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "-"
                on_press: root.math_sign('-')

            # row 4
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "1"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(1)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "2"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(2)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "3"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(3)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "+"
                on_press: root.math_sign('+')

            # row 5
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "+/-"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.pos_neg()

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "0"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(0)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "."
                background_color: (157/255,157/255,157/255,1)
                on_press: root.dot('.')

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "="
                background_normal: ""
                background_color: (11/255,211/255,222/255,1)
                on_press: root.equals()
